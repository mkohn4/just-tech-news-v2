    <div class="container">
        <article class="post">
            <div class="title">
                <a href="/post/{{id}}" target="_self">
                   <i class="fas fa-paw"></i>
                    {{pet_name}}</a>
            </div>
            <p>{{description}}</p>
            {{#each careTopics}}
            <p>
                {{title}}:
                {{description}}
            </p>
            {{/each}}
            <div class="meta">
                {{vote_count}} {{format_plural "point" vote_count}} by {{user.username}} on {{format_date created_at}}
                
                <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </div>
        </article> 
    </div>